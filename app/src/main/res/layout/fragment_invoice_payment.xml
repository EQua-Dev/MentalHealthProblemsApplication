<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".client.clientinvoice.InvoicePayment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_mini"
        android:id="@+id/client_view_notification_list_title"
        android:text="View Invoice Notification"
        android:layout_centerHorizontal="true"/>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_mini"
        android:layout_below="@+id/client_view_notification_list_title"
        android:id="@+id/rv_client_invoice_notification"
        tools:listitem="@layout/client_custom_invoice_notification_layout"
        tools:itemCount="7"/>


</RelativeLayout>